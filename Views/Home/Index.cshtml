@*Make BlogProject Models data availabe to this View with using directive*@
@using BlogProject.Models

@*To use model data sent to View from the Controller, create iterable instance: IEnumerable of type Blog*@
@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- For each blog in IEnumerable<Blog> aka Model, create a blog -->
            @foreach(var blog in Model)
            {
                <!-- Post preview-->
                <div class="post-preview">
                    <!-- Change action to BlogPostIndex, a list of associated posts for that blog.Id -->
                    <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-id="@blog.Id">
                        <h2 class="post-title">@blog.Name</h2>
                        <h3 class="post-subtitle">@blog.Description</h3>
                    </a>
                    <p class="post-meta">
                        Author:
                        <a href="#!">@blog.BlogUser.FullName</a>
                        on @blog.Created.ToString("MMM dd, yyyy")
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
            }    
            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

    </script>
}
